<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"
	title="About DAS2 Manager"
	showCloseButton="true" 
	width="546" 
	height="390"
	verticalGap="0"
	close="closeWindow()"
	layout="vertical" backgroundAlpha="100" defaultButton="{cancelButton}">

    
       
    <mx:Script>
	<![CDATA[
	
	import mx.managers.PopUpManager;
	import mx.rpc.events.ResultEvent;
	import mx.controls.Alert;
	
	
    private function closeWindow():void {
		PopUpManager.removePopUp(this);		
	}
	
	]]>
    </mx:Script>
    
    <mx:VBox height="100%" width="100%" styleName="panelBody" verticalGap="20">
        <mx:Label text="DAS2 Manager, version 1.0.0 " fontWeight="bold" width="100%" textAlign="center" fontSize="12"/>
        <mx:Text text="DAS2 Manager is part of  the open source Genoviz project,&#xa;which develops interactive visualization software for genomics.  &#xa;Affymetrix, Inc., donated Genoviz and IGB to the open source community in 2004.&#xa;Genoviz receives support from National Science Foundation's Arabidopsis 2010 program&#xa;and from a growing community of developers and scientists." width="100%"/>
        <mx:VBox width="100%" verticalGap="0">
            <mx:Text text="Source code for DAS2 Manager  is released under the Common Public License, v1.0.&#xa;For details see: "/>
            <mx:LinkButton label="http://genoviz.sourceforge.net" click="navigateToURL(new URLRequest('http://genoviz.sourceforge.net'), '_blank');" textDecoration="underline" color="#0000ff" paddingLeft="0" paddingTop="0"/>
            <mx:LinkButton label="Apache license" click="navigateToURL(new URLRequest('http://www.apache.org/licenses/LICENSE-2.0'), '_blank');" textDecoration="underline" color="#0000ff" paddingLeft="0" paddingTop="0"/>
        </mx:VBox>
        <mx:VBox verticalGap="0" width="100%">
	        <mx:Text text="DAS2 Manager uses the Flex SDK open source package from Adobe.  &#xa;For details see:" width="100%"/>
	        <mx:LinkButton label="Adobe Open Source" click="navigateToURL(new URLRequest('http://opensource.adobe.com/wiki/display/flexsdk/Flex+SDK;'), '_blank');" textDecoration="underline" color="#0000ff" paddingLeft="0" paddingTop="0"/>
        </mx:VBox>
        <mx:HBox horizontalGap="0"  verticalAlign="middle" width="100%">
        	<mx:Text text="Application icons by"/>
        	<mx:LinkButton label="FamFamFam Silk Icons" click="navigateToURL(new URLRequest('http://www.famfamfam.com/lab/icons/silk/'), '_blank');" textDecoration="underline" color="#0000ff"/>
        </mx:HBox>
	
    </mx:VBox>

	<mx:ControlBar horizontalAlign="right">
		<mx:Button id="cancelButton" label="Close" click="closeWindow()"/>
	</mx:ControlBar>
</mx:TitleWindow>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>

  <context-param>
    <param-name>genometry_dbmode</param-name>
    <param-value>true</param-value>
  </context-param>
  
	<context-param>
		<param-name>genometry_server_dir_dbmode</param-name>
		<param-value>c:/apache/tomcat5.5/Das2ManagedData</param-value>
	</context-param>
 
	<context-param>
		<param-name>maintainer_email</param-name>
		<param-value>first.last@someplace.something.edu</param-value>
	</context-param>

	<!--                                                                  -->
	<!-- the '/genome' at the end of xml_base matches the servlet-mapping -->
	<!--                                                                  -->
	<context-param>
		<param-name>xml_base</param-name>
		<param-value>http://localhost:8080/DAS2/genome</param-value>
	</context-param>
	
	<!-- Listener to obtain Hibernate session  --> 
  <listener>
    <listener-class>com.affymetrix.genometry.servlets.das2manager.HibernateAppListener</listener-class>
  </listener>	
  
	<servlet>
		<servlet-name>Das2ManagerServlet</servlet-name>
		<servlet-class>com.affymetrix.genometry.servlets.das2manager.Das2ManagerServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>GenometryDas2Servlet</servlet-name>
		<servlet-class>com.affymetrix.genometry.servlets.GenometryDas2Servlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Das2ManagerServlet</servlet-name>
		<url-pattern>/manager</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Das2ManagerServlet</servlet-name>
		<url-pattern>/manager/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>Das2Manager.swf</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>AC_OETags.js</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/Das2Manager.swf</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>GenometryDas2Servlet</servlet-name>
		<url-pattern>/genome</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>GenometryDas2Servlet</servlet-name>
		<url-pattern>/genome/*</url-pattern>
	</servlet-mapping>

	<filter>
	<filter-name>Compress</filter-name>
		<filter-class>com.affymetrix.genometry.servlets.GZIPFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>Compress</filter-name>
		<servlet-name>GenometryDas2Servlet</servlet-name>
	</filter-mapping>
	
	<!-- Session timeout set to 4 hours -->
	<session-config>
		<session-timeout>240</session-timeout>
	</session-config>
	
	<!--  Security Constraint -->
	<security-constraint>
		<display-name>Das2User</display-name>
		<web-resource-collection>
			<web-resource-name>Login</web-resource-name>
			<description>Login</description>
			<url-pattern>das2Manager.swf</url-pattern>
			<url-pattern>manager</url-pattern>
			<url-pattern>manager/*</url-pattern>
			<url-pattern>/*</url-pattern>   
		</web-resource-collection>
		<auth-constraint>
			<role-name>das2admin</role-name>
			<role-name>das2user</role-name>
			<role-name>das2guest</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<login-config>
		<auth-method>DIGEST</auth-method>
		<realm-name>Das2</realm-name>
	</login-config>
	
	
	<security-role>
		<role-name>das2admin</role-name>
	</security-role>

	<security-role>
		<role-name>das2user</role-name>
	</security-role>

	<security-role>
		<role-name>das2guest</role-name>
	</security-role>
	

</web-app>

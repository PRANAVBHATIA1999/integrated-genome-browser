            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>   
                        <Embed-Dependency>*;scope=compile|runtime</Embed-Dependency> 
                        <Import-Package>!${project.artifactId},
                            javax.xml.bind,
                            javax.xml.bind.annotation,
                            javax.xml.bind.annotation.adapters,
                            javax.xml.bind.attachment,
                            javax.xml.bind.helpers,
                            javax.xml.bind.util,	
                            *
                        </Import-Package>
                        <Export-Package>org.lorainelab.igb.plugin.manager.service</Export-Package>
                        <Bundle-Description>An IgbTabPanel for managing OSGi OBR repositories for installing IGB plugins</Bundle-Description>
                        <Service-Component>*</Service-Component>
                    </instructions>
                </configuration>
            </plugin>            

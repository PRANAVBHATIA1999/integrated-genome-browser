<?xml version="1.0" encoding="utf-8"?>
<jnlp spec="6.0+" codebase="@jnlpCodebase@">
    <information>
        <title>IGB @jnlpVersion@</title>
        <vendor>Loraine Lab</vendor>
        <homepage href="http://bioviz.org/igb/" />
        <description>Integrated Genome Browser (@jnlpVersion@)</description>
        <icon href="igb.gif"/>
        <offline-allowed/>
        <shortcut online="true">
            <desktop/>
            <menu submenu="IGB" />
        </shortcut>
    </information>
    <security>
        <all-permissions/>
    </security>
    <resources>
        <java version="1.6+" initial-heap-size="200m" max-heap-size="@maxHeapSize@m"/>
        <jar href="@igbJarName@.jar" main="true" />
        <property name="apple.laf.useScreenMenuBar" value="true" />
    </resources>
    <application-desc main-class="com.affymetrix.main.Main" name="IGB">
        <argument>-prefs</argument>
        <argument>@jnlpCodebase@/igb_prefs.xml</argument>
        <!-- Wildcard values inserted to allow modifications after signing -->
        <argument>-href</argument>
        <argument>*</argument>
        <argument>-scriptfile</argument>
        <argument>*</argument>
    </application-desc>
</jnlp>

<project>
	<description>
        build the plugin .jar file
    </description>
	<!-- set global properties for this build -->
	<property environment="env" />
	<property name="src" location="src" />
	<property name="build" location="build" />
	<property name="dist" location="dist" />
	<property name="lib" location="lib" />
	<property name="resources" location="resources" />
	<property name="extra-classpath" value="" />

	<target name="compile" description="compile the source">
		<fail unless="workspace">Please set the IGB_WORKSPACE env variable to the IGB home directory</fail>
		<fail unless="plugin">Please set the plugin variable to the plugin name</fail>
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}" />
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}" debug="${debug}" deprecation="${deprecation}" includeantruntime="false" classpath="${extra-classpath}">
			<classpath location="${workspace}/Integrated_Genome_Browser/core/common/build" />
			<classpath location="${workspace}/Integrated_Genome_Browser/core/igb/build" />
			<classpath location="${workspace}/Integrated_Genome_Browser/core/genometryImpl/build" />
			<classpath location="${workspace}/Integrated_Genome_Browser/core/genoviz_sdk/build" />
			<classpath location="${workspace}/Integrated_Genome_Browser/core/igb_service/build" />
			<classpath location="${workspace}/Integrated_Genome_Browser/core/window_service/build" />
			<classpath location="${workspace}/Integrated_Genome_Browser/plugins/SearchModeSymmetryFilter/build" />
			<classpath location="${workspace}/Integrated_Genome_Browser/ext/colt.jar" />
			<classpath location="${workspace}/Integrated_Genome_Browser/ext/felix.jar" />
			<classpath location="${workspace}/Integrated_Genome_Browser/ext/tribble-0.1.jar" />
			<classpath location="${workspace}/Integrated_Genome_Browser/ext/BigWig.jar" />
			<classpath location="${workspace}/Integrated_Genome_Browser/ext/sam.jar" />
			<classpath location="${workspace}/Integrated_Genome_Browser/ext/commons-lang3-3.1.jar" />
		</javac>
	</target>

	<target name="declare_igb_ant">
		<taskdef name="getvrsn" classname="com.affymetrix.igb.ant.GetVersion"
            classpath="${workspace}/Integrated_Genome_Browser/plugins/ant/build;${workspace}/Integrated_Genome_Browser/ext/felix.jar" />
	</target>

	<target name="dist" depends="clean,compile,declare_igb_ant" description="generate the distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}" />

		<getvrsn manifestfile="META-INF/MANIFEST.MF" />
		<!-- Put everything in ${build} into the plugin .jar file -->
		<jar jarfile="${dist}/${plugin}-${Bundle-Version}.jar" manifest="META-INF/MANIFEST.MF">
			<fileset dir="${build}" />
			<fileset dir="." includes="**/*.jar" />
			<fileset dir="${resources}" />
		</jar>
	</target>

	<target name="clean" description="clean up">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>
</project>

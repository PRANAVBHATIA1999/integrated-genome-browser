<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="IGB-IDE">
    <import file="../build.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#debugj2se) -->
    <target depends="jar" description="run IGB" name="debug-nb">
        <nbjpdastart addressproperty="jpda.address" name="IGB" transport="dt_socket">
            <classpath>
                <fileset dir="${lib.dir}" includes="*.jar"/>
                <fileset dir="${dist.dir}" includes="*.jar"/>
            </classpath>
        </nbjpdastart>
        <java classname="com.affymetrix.igb.IGB" fork="true">
            <jvmarg value="-Xmx1024m"/>
            <arg value="-prefs"/>
            <arg value="${igb}/etc/igb_prefs.xml"/>
            <classpath>
                <fileset dir="${lib.dir}" includes="*.jar"/>
                <fileset dir="${dist.dir}" includes="*.jar"/>
            </classpath>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
</project>

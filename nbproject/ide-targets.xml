<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="IGB-IDE">
    <import file="../build.xml"/>
    <target depends="classpath" description="debug IGB" name="debug-nb">
        <nbjpdastart addressproperty="jpda.address" name="IGB" transport="dt_socket">
            <classpath refid="igb.classpath"/>
        </nbjpdastart>
        <java fork="true" maxmemory="${igb.maxmem}" classname="com.affymetrix.main.Main" >
            <jvmarg line="${igb.jvmargs}" />
			<jvmarg value="-Xms32m" />
			<sysproperty key="java.util.logging.config.file" value="${basedir}/etc/logging.properties" />
			<sysproperty key="apple.laf.useScreenMenuBar" value="true" />
            <arg value="-prefs"/>
            <arg value="${igb}/etc/igb_prefs.xml"/>
            <classpath refid="igb.classpath"/>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>

    <target name="profile-nb" depends="classpath" description="profile IGB in NetBeans">
        <nbprofiledirect>
            <classpath refid="igb.classpath"/>
            <rootspath>
                <dirset dir="${basedir}">
                    <include name="*/build" />
                </dirset>
            </rootspath>
        </nbprofiledirect>
        <java fork="true" maxmemory="${igb.maxmem}" classname="com.affymetrix.main.Main" jvm="${profiler.info.jvm}" dir="${profiler.session.working.dir}">
            <jvmarg line="${igb.jvmargs}" />
            <jvmarg value="${profiler.info.jvmargs.agent}" />
            <jvmarg line="${profiler.info.jvmargs}"/>
            <arg value="-prefs" />
            <arg value="${igb}/etc/igb_prefs.xml" />
            <classpath refid="igb.classpath"/>
        </java>
    </target>

    <target name="profile-single-nb" depends="classpath" description="profile single file in NetBeans">
        <nbprofiledirect>
            <classpath refid="igb.classpath"/>
            <rootspath>
                <dirset dir="${basedir}">
                    <include name="*/build" />
                </dirset>
            </rootspath>
        </nbprofiledirect>
		<java fork="true" maxmemory="${igb.maxmem}" classname="${profile.class}" jvm="${profiler.info.jvm}" dir="${profiler.session.working.dir}">
            <jvmarg line="${igb.jvmargs}" />
            <jvmarg value="${profiler.info.jvmargs.agent}" />
            <jvmarg line="${profiler.info.jvmargs}"/>
            <arg value="-prefs" />
            <arg value="${igb}/etc/igb_prefs.xml" />
            <classpath refid="igb.classpath"/>
        </java>
    </target>
</project>
